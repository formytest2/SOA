<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
	   default-lazy-init="true">
	
	<dubbo:application name="gs4d_cache"></dubbo:application>

	<dubbo:registry protocol="zookeeper" address="${dubbo.zookeeper.host.port}" file="${user.home}/output/cache_dubbo.cache"/>
	
    <!-- 用dubbo协议暴露端口 -->
    <dubbo:protocol name="dubbo" port="${dubbo.service.port}" threads="1000" />     

	<dubbo:service interface="com.github.bluecatlee.gs4d.cache.api.service.CacheRefreshService" ref="cacheRefreshService" retries="0" timeout="300000"/>
	<dubbo:service interface="com.github.bluecatlee.gs4d.cache.api.service.CacheStoreService" ref="cacheStoreService" retries="2" timeout="5000"/>

</beans>